
<!-- login and register form  -->

<% layout('layouts/basic') %>

  <div class="wrapper" style="width: 1000px;">
    <!-- <div class="form-container" style="width: 600px;"> -->
    <h1 style="text-align: center; color: #3a3a3a;">Set password</h1>
    <br>
      <div class="form-inner">
        <form action="" method="POST" class="login">
          <div class="field">
            <input type="password" placeholder="Enter your new password.." name="password" required>
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" onclick()=> {
              form.submit()
            } value="Set password">
          </div>
        </form>
      </div>
    </div>
  </div>

<script type="text/javascript">
  document.querySelector("form").action = window.location.href;
</script>